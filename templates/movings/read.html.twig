{% extends 'base.html.twig' %}

{% block title %}Movings{% endblock %}

{% block body %}
    <h1>Movings</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moving.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ moving.name }}</td>
            </tr>
        </tbody>
    </table>

    <hr>

    <h2>Boxes</h2>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Name</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for box in moving.boxes %}
            <tr>
                <td>{{ box.id }}</td>
                <td>{{ box.number }}</td>
                <td>{{ box.name }}</td>
                <td>{{ box.origin.name }}</td>
                <td>{{ box.destination.name }}</td>
                <td>{{ box.content }}</td>
                <td>
                    <a href="{{ path('boxes:app:read', {'id': box.id}) }}">show</a>
                    <a href="{{ path('boxes:app:update', {'id': box.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr>

    <a href="{{ path('boxes:app:create', {'moving': moving.id}) }}">add new boxe</a>


    <hr>


    <a href="{{ path('movings:app:index') }}">back to list</a>

    <a href="{{ path('movings:app:update', {'id': moving.id}) }}">edit</a>

    {{ include('movings/_delete_form.html.twig') }}
{% endblock %}
