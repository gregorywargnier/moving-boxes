{% extends 'base.html.twig' %}

{% block title %}Movings index{% endblock %}

{% block body %}
    <h1>Movings index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for moving in movings %}
            <tr>
                <td>{{ moving.id }}</td>
                <td>{{ moving.name }}</td>
                <td>
                    <a href="{{ path('movings:app:read', {'id': moving.id}) }}">show</a>
                    <a href="{{ path('movings:app:update', {'id': moving.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('movings:app:create') }}">Create new</a>
{% endblock %}
